generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}


model Usuario{
  IdUsuario Int @id @default(autoincrement())
  Nombre String
  APaterno String
  AMaterno String
  RFC String
  NomUsuario String @unique
  Contrase√±a String
  Permisos Permisos[]
}


model Organizacion {

  IdOrganzacion Int @id @default(autoincrement())
  Nombre String
  RFC String
  Permisos Permisos[]
}


model Permisos {

  IdPermiso Int @id @default(autoincrement())
  EscrituraLectura Int
  Lectura Int
  IdUsuario Int
  idOrganiazcion Int
  Orgnanizacion Organizacion @relation(fields: [idOrganiazcion], references: [IdOrganzacion])
  Usuario Usuario @relation(fields: [IdUsuario], references: [IdUsuario])

  @@unique([IdPermiso,idOrganiazcion])
}
